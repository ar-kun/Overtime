@{
    ViewData["Title"] = "My Overtime";
    Layout = "_LayoutDashboard";
}

@using System.Security.Claims;
@{
    var claimsIdentity = User.Identity as ClaimsIdentity;
    var name = "user";
    var email = "";
    var guid = "";
    if (claimsIdentity != null)
    {
        // Get the value of a specific claim
        var emailClaim = claimsIdentity.FindFirst(ClaimTypes.Email);
        var fullNameClaim = claimsIdentity.FindFirst(ClaimTypes.Name);
        var identifierClaim = claimsIdentity.FindFirst(ClaimTypes.NameIdentifier);

        if (emailClaim != null)
        {
            email = emailClaim.Value;
        }

        if (identifierClaim != null)
        {
            guid = identifierClaim.Value;
        }

        if (fullNameClaim != null)
        {
            name = fullNameClaim.Value;
        }
    }
}

<!-- Main modal -->
<div id="requestOvertime" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Request Overtime
                </h2>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="requestOvertime">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <form id="requestForm">
                <div class="bg-white px-10 py-8 rounded shadow-md text-black w-full">
                    <!-- Date Request -->
                    <label for="dateRequest" class="form-label">Date Request</label>
                    <input type="date" class="form-control bg-gray-50 block border border-gray-300 w-full p-3 rounded-xl mb-4" id="dateRequest" name="dateRequest" required>

                    <!-- Duration -->
                    <label for="duration" class="form-label">Duration (in hours)</label>
                    <input type="number" class="form-control bg-gray-50 block border border-gray-300 w-full p-3 rounded-xl mb-4" id="duration" name="duration" required>

                    <!-- Remarks -->
                    <label for="remarks" class="form-label">Remarks</label>
                    <textarea id="remarks" rows="2" class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Write a note here..."></textarea>
                </div>
                <!-- Modal footer -->
                <div class="flex items-center justify-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
                    <button data-modal-hide="requestOvertime" type="button" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-full text-md px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">Cancel</button>
                    <button id="submitRequest" type="button" class="text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-md px-5 py-2.5 text-center mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


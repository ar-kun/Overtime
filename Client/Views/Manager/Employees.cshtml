@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutDashboard";
}

@using System.Security.Claims;
@{
    var claimsIdentity = User.Identity as ClaimsIdentity;
    var name = "user";
    var email = "";
    var guid = "";
    if (claimsIdentity != null)
    {
        // Get the value of a specific claim
        var emailClaim = claimsIdentity.FindFirst(ClaimTypes.Email);
        var fullNameClaim = claimsIdentity.FindFirst(ClaimTypes.Name);
        var identifierClaim = claimsIdentity.FindFirst(ClaimTypes.NameIdentifier);

        if (emailClaim != null)
        {
            email = emailClaim.Value;
        }

        if (identifierClaim != null)
        {
            guid = identifierClaim.Value;
        }

        if (fullNameClaim != null)
        {
            name = fullNameClaim.Value;
        }
    }
}

<!-- Main modal -->
<div id="default-modal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative w-full max-w-2xl max-h-full">
        <!-- Modal content -->

<div class="flex px-16 gap-10 py-5 max-h-screen">
    <!-- Side Bar -->
    <section class="w-1/5 bg-gradient-to-r from-third to-secondary rounded-2xl text-white" id="sidebar">
        <img src="~/img/logo.png" alt="" class="px-5 pt-5" />
        <div class="border-b-2 border-primary border-dashed w-full mb-4"></div>
        <!-- Dashboard -->
        <div class="px-10 text-xl my-2">
            <a href="~/dashboard" class="flex gap-5">
                <i class="fa-regular fa-calendar-check"></i>
                <p>Dashboard</p>
            </a>
        </div>
        <!-- Overtime -->
        <div class="px-10 text-xl my-2">
            <a href="~/overtime" class="flex gap-5">
                <i class="fa-regular fa-rectangle-list"></i>
                <p>Overtime</p>
            </a>
        </div>
        <!-- Payroll -->
        <div class="px-10 text-xl my-2">
            <a href="~/payroll" class="flex gap-5">
                <i class="fa-regular fa-rectangle-list"></i>
                <p>Payroll</p>
            </a>
            <div class="border-b-2 border-primary w-full mb-4"></div>
        </div>
        <!-- Employee -->
        <div class="px-10 text-xl my-2">
            <a href="" class="flex gap-5">
                <i class="fa-solid fa-users"></i>
                <p>Employees</p>
            </a>
        </div>
    </section>
    <!-- Header and Content -->
    <section class="w-4/5 backdrop-blur-md text-third px-10 relative rounded-2xl" id="payrollList">
        <!-- Header -->
        <div class="">
            <div class="flex flex-wrap justify-between items-center mb-5">
                <h1 class="text-3xl font-bold">Overtime Payroll</h1>
                <div class="flex gap-5 items-center">
                    <a href="" class="bg-third px-5 py-2 rounded-lg shadow-md text-white shadow-slate-600 hover:bg-secondary hover:shadow-none">History Overtime</a>
                    <a href=""><i class="fa-regular fa-bell text-2xl"></i></a>
                    <div class="w-14 h-1/4rounded-full">
                        <img src="~/img/profile.png" alt="" class="" />
                    </div>
                </div>
                <div class="border-b-2 border-slate-700 border-dashed w-full"></div>
            </div>
        </div>
        
        <!-- Content -->
        <div class="border-2 border-slate-500 rounded-lg p-5 relative">
            <table id="payrollTable" class="display" style="width: 100%">
                <thead>
                    <tr>
                        <th>NIK</th>
                        <th>Full Name</th>
                        <th>Overtime Date</th>
                        <th>Duration</th>
                        <th>Type</th>
                        <th>Overtime Pay</th>
                        <th>Payment Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </section>
</div>

